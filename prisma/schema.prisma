generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String               @id @default(uuid())
  name                String?
  email               String               @unique
  emailVerified       DateTime?
  image               String?
  Field               String?              @db.Text
  Google_Oath         String?              @unique
  IsActive            Boolean              @default(true)
  UserName            String?
  coin                Int                  @default(0)
  Create_time         DateTime             @default(now()) @map("created_at")
  Update_time         DateTime             @default(now()) @updatedAt @map("updated_at")
  accounts            Account[]
  footprints          Footprint[]
  footprintTransports FootprintTransport[]
  friendsAsFriend     Friend[]             @relation("FriendOf")
  friendsAsUser       Friend[]             @relation("UserFriends")
  mapRecords          MapRecord[]
  sessions            Session[]
  userTasks           UserTask[]
  notifications       Notification[]

  @@map("User")
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId], map: "Account_userId_fkey")
  @@map("Account")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], map: "Session_userId_fkey")
  @@map("Session")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("VerificationToken")
}

model Friend {
  id          String   @id @default(uuid())
  user_id     String
  friend_id   String
  status      String   @default("accepted") // accepted, pending
  Create_time DateTime @default(now())
  Update_time DateTime @default(now()) @updatedAt
  friendUser  User     @relation("FriendOf", fields: [friend_id], references: [id], onDelete: Cascade)
  user        User     @relation("UserFriends", fields: [user_id], references: [id], onDelete: Cascade)

  @@unique([user_id, friend_id])
  @@index([friend_id], map: "Friend_friend_id_fkey")
  @@map("Friend")
}

model Notification {
  id          String   @id @default(uuid())
  user_id     String
  type        String   // friend_request, friend_accepted, etc.
  title       String
  message     String?  @db.Text
  isRead      Boolean  @default(false)
  related_id  String?  // 相關的 ID（如好友請求的 Friend ID）
  Create_time DateTime @default(now())
  Update_time DateTime @default(now()) @updatedAt
  user        User     @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id], map: "Notification_user_id_fkey")
  @@map("Notification")
}

model Footprint {
  id              String               @id @default(uuid())
  user_id         String
  coordinate      String?              @db.Text
  Create_time     DateTime             @default(now())
  Update_time     DateTime             @default(now()) @updatedAt
  user            User                 @relation(fields: [user_id], references: [id], onDelete: Cascade)
  endTransports   FootprintTransport[] @relation("FootprintEnd")
  startTransports FootprintTransport[] @relation("FootprintStart")

  @@index([user_id], map: "Footprint_user_id_fkey")
  @@map("Footprint")
}

model FootprintTransport {
  id              String    @id @default(uuid())
  footprint_start String    @map("footprint_start_id")
  footprint_end   String    @map("footprint_end_id")
  user_id         String
  name            String?
  Create_time     DateTime  @default(now())
  Update_time     DateTime  @default(now()) @updatedAt
  endPoint        Footprint @relation("FootprintEnd", fields: [footprint_end], references: [id], onDelete: Cascade)
  startPoint      Footprint @relation("FootprintStart", fields: [footprint_start], references: [id], onDelete: Cascade)
  user            User      @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([footprint_end], map: "FootprintTransport_footprint_end_id_fkey")
  @@index([footprint_start], map: "FootprintTransport_footprint_start_id_fkey")
  @@index([user_id], map: "FootprintTransport_user_id_fkey")
  @@map("FootprintTransport")
}

model Task {
  id          String     @id @default(uuid())
  name        String?
  description String?    @db.Text
  coordinate  String?    @db.Text
  Coin        Int        @default(0)
  isTemporary Boolean    @default(false) // 是否為臨時任務（由好友足跡產生）
  isMainTask  Boolean    @default(false) // 是否為主要任務（每日任務）
  assignedUserId String? // 指派給的用戶ID（主要任務專屬）
  refreshDate DateTime?  // 任務刷新日期（用於判斷是否需要刷新）
  relatedUserId String?  // 相關的使用者 ID（如果是臨時任務，記錄是哪位好友的足跡）
  relatedMapRecordId String? // 相關的 MapRecord ID
  Create_time DateTime   @default(now())
  Update_time DateTime   @default(now()) @updatedAt
  userTasks   UserTask[]
  
  @@index([assignedUserId, isMainTask], map: "Task_assignedUserId_isMainTask_idx")
  @@map("Task")
}

model UserTask {
  id          String   @id @default(uuid())
  user_id     String
  task_id     String
  isDone      Boolean  @default(false)
  Field       String?  @db.Text
  Create_time DateTime @default(now())
  Update_time DateTime @default(now()) @updatedAt
  task        Task     @relation(fields: [task_id], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@unique([user_id, task_id])
  @@index([task_id], map: "UserTask_task_id_fkey")
  @@map("UserTask")
}

model MapRecord {
  id          String             @id @default(uuid())
  user_id     String
  coordinate  String?            @db.Text
  name        String?
  description String?            @db.Text
  Create_time DateTime           @default(now())
  Update_time DateTime           @default(now()) @updatedAt
  user        User               @relation(fields: [user_id], references: [id], onDelete: Cascade)
  pictures    MapRecordPicture[]

  @@index([user_id], map: "MapRecord_user_id_fkey")
  @@map("MapRecord")
}

model MapRecordPicture {
  id          String    @id @default(uuid())
  record_id   String
  picture     String?   @db.LongText
  Create_time DateTime  @default(now())
  Update_time DateTime  @default(now()) @updatedAt
  mapRecord   MapRecord @relation(fields: [record_id], references: [id], onDelete: Cascade)

  @@index([record_id], map: "MapRecordPicture_record_id_fkey")
  @@map("MapRecordPicture")
}

model TwGeoJson {
  id          String   @id @default(uuid())
  CountyID    String?  @map("CountyID") // 縣市ID
  Name        String?  // 縣市名稱
  Area        String?  @db.LongText // GeoJSON 邊界資料
  Create_time DateTime @default(now())
  Update_time DateTime @default(now()) @updatedAt

  @@map("twgeojson")
}